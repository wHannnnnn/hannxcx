.allDiscounts .discounts_con {
    margin-bottom: 20rpx;
    background: #fff;
    padding: 10rpx;
}
.allDiscounts .discounts_con .discounts_con_top{
    display: flex;
    border-bottom: 1rpx dashed #9E9E9E;
    padding-bottom: 8rpx;
}
.allDiscounts .discounts_con .discounts_con_left {
    width: 140rpx;
    height: 140rpx;
    background: #e7352c;
    color: #fff;    
    display: flex;
    flex-wrap: wrap;
    align-items: center;
    justify-content: center;
    font-size: 38rpx;
    padding: 10rpx;
}
.left_top span {
    font-size: 24rpx
}
.discounts_con .discounts_con_left .left_bottom {
    font-size: 24rpx
}
.allDiscounts .discounts_con .discounts_con_left.effect {
    background: #9e9e9e;
}
.allDiscounts .discounts_con .discounts_con_right {
    flex: 1;
    padding: 10rpx 20rpx;
}
.allDiscounts .discounts_con .right_top {
    height: 84rpx
}
.allDiscounts .discounts_con .right_bottom {
    display: flex;
    justify-content: space-between;
}
.allDiscounts .discounts_con .right_bottom .left{
    font-size: 20rpx
}
.allDiscounts .discounts_con .right_bottom .van-button {
    height: 44rpx;
    line-height: 42rpx;
    border-radius: 20rpx;
    padding: 0 15rpx;
    font-size: 24rpx;
    background: #e7352c;
    color: #fff
}
.allDiscounts .discounts_con .discounts_con_bottom {
    padding: 10rpx
}