.cart .delete-bar .van-submit-bar__bar {
  justify-content: space-between;
  align-items: center;
}

.cart .van-submit-bar__button {
  width: 220rpx;
  height: 80rpx;
  line-height: 80rpx;
  border-radius: 100rpx;
  font-size: 24rpx;
}

.cart .no-data {
  text-align: center;
  position: absolute;
  top: 40%;
  left: 50%;
  transform: translate(-50%);
}

.cart .no-data-title {
  font-size: 32rpx;
  color: #666;
  font-weight: 400;
  margin-bottom: 20rpx;
}

.cart .no-data-txt {
  font-size: 28rpx;
  color: #999;
  margin-bottom: 20rpx;
}

.cart .no-data-btn {
  font-size: 28rpx;
  padding: 0 40rpx;
  height: 68rpx;
  line-height: 64rpx;
}

.van-stepper__minus::before, .van-stepper__plus::before {
  width: 26rpx;
}

.van-stepper__minus::after, .van-stepper__plus::after {
  height: 26rpx;
}