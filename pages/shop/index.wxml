<!--pages/shop/index.wxml-->
 <view class="cart">
      <van-nav-bar
        title="购物车"
        right-text="删除"
        bind:click-left="onClickLeft"
        bind:click-right="moreDelete"
        safe-area-inset-top="false"
      />
      <view class="content"
        wx:if="goods.length">
        <!-- 可以购买的商品 -->
          <van-checkbox-group class="list"
            bind:change="onChange"
            value="{{checkedGoods}}">
            <van-checkbox 
              icon-size="32rpx"
              class="list-item"
              wx:for="{{goods}}"
              wx:key="index"
              name="{{item.key}}"
              checked-color="#ff4444"
              label-disabled>
                <van-card title="{{item.name}}"
                  data-id='{{item.goodsId}}'
                  data-key="{{item.key}}"
                  bindtap="goDetails"
                  bindlongpress="deleteShop" 
                  class="{{item.stores == 0?'noMore':''}}"
                  desc="{{item.propTitle}}"
                  price="{{item.price}}"
                  thumb="{{item.pic}}">
                  <view slot="tags" class="tags">
                    <span wx:for="{{item.sku}}" wx:for-item="skuItem" wx:key="optionId">
                      {{skuItem.optionName}}:{{skuItem.optionValueName}},
                    </span>
                  </view>
                  <!-- <view slot="num" class="noStores" v-if="item.stores == 0">
                    无货
                  </view> -->
                  <view slot="num">
                    <van-stepper
                      input-width="44rpx" button-size="44rpx"
                      disabled="{{item.stores == 0?true:false}}"
                      value="{{item.number}}"
                      async-change
                      data-key="{{item.key}}"
                      bind:change="changeNumber"
                    />
                  </view>
                </van-card> 
            </van-checkbox>
          </van-checkbox-group>
        <!-- 已经失效的商品 -->
        <view class="list" wx:if="{{oldGoods&&oldGoods.length>0}}">
          <view class="list_top">
            <view class="left">
              失效商品{{oldGoods.length}}件
            </view>
            <view class="right">
              <span class="add_collect">移到收藏夹</span>
              <span class="remove" bindtap="removeOld">清空失效商品</span>
            </view>
          </view>
