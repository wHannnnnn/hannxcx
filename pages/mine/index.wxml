<!--pages/mine/index.wxml-->
<view class="mine">
    <view class="mine_top bgc-radius-shadow">
        <view class="avatar" wx:if="{{loginTrue}}">
          <image src="{{userInfo.avatarUrl}}" class="slide-image" mode="aspectFill" lazy-load="true"/> 
        </view>
        <view class="right">
          <button class="login" wx:if="{{!loginTrue}}" bindgetuserinfo="bindGetUserInfo" open-type="getUserInfo">登录/注册</button>
          <!-- <view class="login" bindtap='login' wx:if="{{!loginTrue}}">登录/注册></view> -->
          <view class="userDetail" wx:else>
            <view class="userName">{{userInfo.nickName}}</view>
            <view class="level">普通用户</view>
          </view>
        </view>
    </view>
    <view class="money margin-bottom">
      <!-- <view class="money_top top_title">
        <span class="top_left">我的资产</span>
      </view> -->
      <van-grid column-num="3" border="{{ false }}">
        <van-grid-item use-slot>
          <view class="number">0</view>
          <view class="name">红包</view>
        </van-grid-item>
        <van-grid-item use-slot bindtap="goDiscountDetails">
          <view class="number">{{discountsLength}}</view>
          <view class="name">优惠券</view>
        </van-grid-item>
        <van-grid-item use-slot>
          <view class="number">0</view>
          <view class="name">积分</view>
        </van-grid-item>
      </van-grid>
    </view>
    <view class="order margin-bottom">
      <view class="order_top top_title">
        <span class="top_left">我的订单</span>
      </view>
      <van-grid column-num="5" border="{{ false }}">
        <van-grid-item wx:for="{{orderList}}" data-status="{{item.status}}" bindtap="goOrderList" icon="{{item.icon}}" text="{{item.title}}" wx:key="id" info="{{item.info==0? '' : item.info}}" />
      </van-grid>
    </view>
    <view class="order margin-bottom">
      <view class="order_top top_title">
        <span class="top_left">我的服务</span>
      </view>
      <van-grid column-num="3" border="{{ false }}">
        <van-grid-item icon="like" text="我的收藏"/>
        <van-grid-item icon="setting" text="设置"/>
        <van-grid-item icon="location" bindtap="goAddress" text="收货地址"/>
        <van-grid-item icon="bill" text="邀请得现金"/>
        <van-grid-item icon="service" text="客服和帮助"/>
      </van-grid>
    </view>
</view>
