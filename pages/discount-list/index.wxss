.discount {
  background: #fff;
  padding: 20rpx
}
.discounts_con {
  display: flex;
  margin-bottom: 20rpx;
  padding: 20rpx;
}

.discounts_con .discounts_con_left {
  width: 140rpx;
  height: 140rpx;
  background: #e7352c;
  color: #fff;
  display: flex;
  flex-wrap: wrap;
  align-items: center;
  justify-content: center;
  font-size: 38rpx;
  padding: 10rpx;
}

.discounts_con .discounts_con_left .left_top span {
  font-size: 24rpx;
}

.discounts_con .discounts_con_left .left_bottom {
  font-size: 24rpx;
}

.discounts_con .discounts_con_right {
  flex: 1;
  padding: 10rpx 20rpx;
}

.discounts_con .discounts_con_right .right_top {
  height: 84rpx;
}

.discounts_con .discounts_con_right .right_bottom {
  display: flex;
  justify-content: space-between;
}

.discounts_con .discounts_con_right .right_bottom .left {
  font-size: 20rpx;
}
.discounts_con .weui-btn_mini  {
  font-size: 24rpx;
  border-radius: 20rpx
}
