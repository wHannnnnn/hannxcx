/**app.wxss**/
@import "weui.wxss";
@import "iconfont.wxss";
@import "miniprogram_npm/@vant/weapp/common/index.wxss";
page {
  height: 100%;
  background: #eee;
}
view {
  font-size: 24rpx
}
.van-hairline--top:after {
  border: none
}
.bottom .loadMore{
  padding: 10rpx;
  font-size: 24rpx;
  text-align: center;
  color: #9c9c9c
}
.margin-bottom {
    margin-bottom: 20rpx
}
.weui-loadmore {
  width: 100%;
  /* height: 100rpx; */
  font-size: 30rpx;
  text-align: center;
  margin-top: 90rpx;
}
.weui-loadmore-tips {
  display: inline-block;
  vertical-align: middle;
}
.weui-search-bar {
  padding: 8rpx 0;
}

.weui-search-bar__form {
  border-radius: 8rpx;
}

.weui-search-bar__box .weui-search-bar__input {
  padding: 16rpx 0;
  font-size: 28rpx;
}

.weui-search-bar__text {
  font-size: 24rpx;
}
.weui-btn {
  background: linear-gradient(90deg, #f32419,#ff8178);
}