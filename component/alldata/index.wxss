/* component/alldata/index.wxss */
.allList {
    padding: 20rpx;
    font-size: 28rpx
}
.orderData {
    border-radius: 30rpx;
    background: #fff;
    margin-bottom: 20rpx;
    padding: 20rpx;
}
.orderData .data_top {
    display: flex;
    justify-content: flex-end;
    padding: 10rpx 0 10rpx 10rpx;
}
.orderData .data_top .order_delete {
    font-size: 28rpx
}
.orderData .data_center{
    display: flex;
}
.orderData .data_center .price {
    text-align: center;
    height: 80rpx;
}
.orderData .data_center .price .price_top, .orderData .data_center .price .price_bottom {
    height: 40rpx;
    line-height: 40rpx;
    text-align: right;
}
.orderData .data_center .price .price_bottom {
  margin-top: 10rpx
}
.orderData .data_center .price .price_top .second, .orderData .data_center .price .price_bottom .second{
    font-size: 38rpx
}
.orderData .data_center .data_img {
    flex: 1;
    display: flex;
    overflow: hidden;
}
.orderData .data_center .data_img .data_img_con {
    width: 140rpx;
    height: 140rpx;
    flex-shrink: 0;
    margin-right: 10rpx;
    border-radius: 6rpx;
    overflow: hidden;
    display: inline-block;
}
.orderData .data_center .data_img .data_img_con  image {
    width: 100%;
    height: 100%
}
.orderData .data_center .data_title {
    width: 400rpx;
    padding: 0 10rpx;
  box-sizing: border-box;
}
.orderData .data_bottom {
    display: flex;
    justify-content: flex-end;
    padding-top: 20rpx;
}
.orderData .data_bottom .van-button {
    border-radius: 20rpx;
    height: 48rpx;
    line-height: 42rpx;
    padding: 0 20rpx;
    font-size: 24rpx;
    border: 1rpx solid #c5c5c5;
    margin-right: 20rpx
}
.orderData .data_bottom .buyagain {
    color: #e7352c;
    margin: 0 20rpx
}