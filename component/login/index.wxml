<!--compontent/login/index.wxml-->
<van-popup
  show="{{ ishow }}"
  position="bottom"
  custom-style="height: 60%;"
  bind:close="close"
  closeable
  close-icon="close"
>
  <view>
      <view class="isMask"></view>
      <view class="isLogin">
          <view class="loginTitle">微信授权</view>
          <view class="loginshopImg">
              <view>小程序将获取以下权限：</view>
              <view>(如未授权，可能无法正常使用该小程序)</view>
          </view>
          <view class="isAgary">
              <text>•</text>
              <view>获取你的公开信息(昵称、头像等)</view>
          </view>
          <view class="isLoginBtn">  
              <button bindgetuserinfo="bindGetUserInfo" open-type="getUserInfo">授权</button>
          </view>
      </view>
  </view>
</van-popup>
